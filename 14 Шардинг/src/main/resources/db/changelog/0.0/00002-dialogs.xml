<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
        http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd">

    <changeSet id="00001-user" author="tikskit">
        <preConditions>
            <not>
                <tableExists tableName="dialogs" schemaName="socnet"/>
            </not>
        </preConditions>
        <createTable tableName="dialogs" schemaName="socnet">
            <column name="senderid" type="varchar(36)">
                <constraints nullable="false"/>
            </column>
            <column name="receiverid" type="varchar(36)">
                <constraints nullable="false"/>
            </column>
            <column name="text" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="datetime" type="timestamp with time zone">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="00002-user" author="tikskit">
        <preConditions>
            <and>
                <tableExists tableName="dialogs" schemaName="socnet"/>
                <not>
                    <indexExists tableName="dialogs" columnNames="senderid,receiverid,datetime"/>
                </not>
            </and>
        </preConditions>
        <createIndex tableName="dialogs" indexName="ix_dialogs_senderid_receiverid_datetime">
            <column name="senderid"/>
            <column name="receiverid"/>
            <column name="datetime"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>